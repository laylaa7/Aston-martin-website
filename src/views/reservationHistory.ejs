<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>CRUD</title>
</head>
<header style="height: 10vh; width: 100%; position: fixed; top: 0; display: flex; align-items: center; justify-content: space-evenly; flex-direction: row; z-index: 9; padding: 5px; margin: 0;">
    <div class="logo">
        <a href="/adminLandingPage"><img src="/assets/img/logo.png" alt="logo" width="200" style="padding: 0px; margin: 0px;"></a>
    </div>
</header>

<body style="color:white; background-color: black;">
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-5"><strong>Reservation History</strong></h1>
        </div>
        <div class="main row justify-content-center">
            <form action="" id="reservation-form" class="row justify-content-center mb-4" autocomplete="off">
                <div class="col-10 col-mid-8 mb-3">
                    <label for="firstName">FirstName</label>
                    <input class="form-control" id="firstName" type="text" placeholder="Enter FirstName">
                </div>
                <div class="col-10 col-mid-8 mb-3">
                    <label for="lastName">LastName</label>
                    <input class="form-control" id="lastName" type="text" placeholder="Enter LastName">
                </div>
                <div class="col-10 col-mid-8 mb-3">
                    <label for="email">Email Address</label>
                    <input class="form-control" id="email" type="email" placeholder="Enter Email">
                </div>
                <div class="col-10 col-mid-8 mb-3">
                    <label for="telephone">Telephone</label>
                    <input class="form-control" id="telephone" type="text" placeholder="Enter Number">
                </div>
                <div class="col-10 col-mid-8 mb-3">
                    <label for="city">City</label>
                    <input class="form-control" id="cityInput" type="text" placeholder="Enter city">
                </div>
           <!--      <div class="col-10 col-mid-8 mb-3">
                    <label for="carModel">Car Model</label>
                    <input class="form-control" id="carModel" type="text" placeholder="Enter car Model">
                </div> -->
                <div class="col-10 col-mid-8 mb-3">
                    <label for="reservationtime">Reservation Time</label>
                    <input class="form-control" id="reservationtime" type="text" placeholder="Enter time">
                </div>
                <div class="col-10 col-mid-8">
                    <input class="btn btn-success add-btn" type="submit" value="submit" id="submit">
                </div>
            </form>
            <div class="col-17 col-mid-10 mt-5">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Telephone</th>
                            <th>City</th>
                             <!-- <th>Car Model</th> -->
                            <th>Reservation Time</th>
                            <th>Actions</th> 
                        </tr>
                    </thead>
                    <tbody id="reservation-list">
                        <% reservations.forEach(reservation => { %>
                            <tr>
                                <td><%= reservation.firstname %></td>
                                <td><%= reservation.lastname %></td>
                                <td><%= reservation.email %></td> 
                                <td><%= reservation.telephone %></td>
                                <td><%= reservation.cityInput %></td>
                               <!--  <td><= reservation.carModelElement %></td> -->
                                <td><%= reservation.reservationtime %></td>
                                <td>
                                    <a href="#" class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="#" class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <script src="/scripts/admin/reservationHistory.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>

</html>
