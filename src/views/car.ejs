<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>CRUD</title>
</head>
<header style="height: 10vh; width: 100%; position: fixed; top: 0; display: flex; align-items: center; justify-content: space-evenly; flex-direction: row; z-index: 9; padding: 5px; margin: 0;">
    <div class="logo">
        <a href="/adminLandingPage"><img src="/assets/img/logonour.png" alt="logo" width="200" style="padding: 0px; margin: 0px;"></a>
    </div>
</header>

<body style="color:white; background-color: black;">
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-5"><strong>Admin Dashboard</strong></h1>
        </div>
        <div class="main row justify-content-center">
            <form method="POST" action="/api/edit/cars/cars.id" id="user-form" class="row justify-content-center mb-4" autocomplete="off">
                <div class="col-10 col-md-8 mb-3">
                    <label for="firstName">Name</label>
                    <input class="form-control" id="firstName" type="text" placeholder="Enter Name">
                </div>
                <div class="col-10 col-md-8 mb-3">
                    <label for="CarName">Car Name</label>
                    <input class="form-control" id="CarName" type="text" placeholder="Enter Car Name">
                </div>
                <div class="col-10 col-md-8 mb-3">
                    <label for="CarType">Car Type</label>
                    <input class="form-control" id="CarType" type="text" placeholder="Enter Car Type">
                </div>
                <div class="col-10 col-md-8 mb-3">
                    <label for="TopSpeed">Top Speed</label>
                    <input class="form-control" id="TopSpeed" type="number" placeholder="Enter Top Speed">
                </div>
                <div class="col-10 col-md-8 mb-3">
                    <label for="ZeroToHundred">0-100 km/h</label>
                    <input class="form-control" id="ZeroToHundred" type="number" placeholder="Enter Time">
                </div>
                <div class="col-10 col-md-8 mb-3">
                    <label for="Acceleration">Acceleration</label>
                    <input class="form-control" id="Acceleration" type="number" placeholder="Enter Acceleration">
                </div>
                <div class="col-10 col-md-8">
                    <input class="btn btn-success add-btn" type="submit" value="submit" id="submit">
                </div>
            </form>
            <div class="col-17 col-md-10 mt-5">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>Car-ID</th>
                            <th>Car Name</th>
                            <th>Car Description</th>
                            <th>Top Speed</th>
                            <th>0-100 km/h</th>
                            <th>Acceleration</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="user-list">
                        <% cars.forEach(car => { %>
                            <tr>
                                <td><%= car.id %></td>
                                <td><%= car.name %></td>
                                <td><%= car.description %></td>
                                <td><%= car.topSpeed %></td>
                                <td><%= car.zeroToHundred %></td>
                                <td><%= car.acceleration %></td>
                                <td>
                                    <a href="#" class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="#" class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <script src="adminDash.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </div>
</body>

</html>
