<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>CRUD</title>
</head>
<header style="height: 10vh; width: 100%; position: fixed; top: 0; display: flex; align-items: center; justify-content: space-evenly; flex-direction: row; z-index: 9; padding: 5px; margin: 0;">
    <div class="logo">
        <a href="/src/views/adminLandingPage.html"><img src="/assets/imgs/logo.png" alt="logo" width="200" style="padding: 0px; margin: 0px;"></a>
    </div>
</header>

<body style="color:white; background-color: black;">
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-5"><strong>Reservation History</strong></h1>
        </div>
        <div class="main row justify-content-center">
            <form action="" id="user-form" class="row justify-content-center mb-4" autocomplete="off">
                <div class="col-10 col-mid-8 mb-3">
                    <label for="firstName">FirstName</label>
                    <input class="form-control" id="firstName" type="text" placeholder="Enter FirstName">
                </div>
                <div class="col-10 col-mid-8 mb-3">
                    <label for="email">Email Address</label>
                    <input class="form-control" id="email" type="email" placeholder="Enter Email">
                </div>
                <div class="col-10 col-mid-8">
                    <input class="btn btn-success add-btn" type="submit" value="submit" id="submit">
                </div>
            </form>
            <div class="col-17 col-mid-10 mt-5">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>password</th>
                            <!-- <th>Reservation</th>
                            <th>Car Model</th>
                            <th>Actions</th> -->
                        </tr>
                    </thead>
                    <tbody id="user-list">
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.password %></td>
                             
                                <td>
                                    <a href="#" class="btn btn-warning btn-sm edit">Edit</a>
                                    <a href="#" class="btn btn-danger btn-sm delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <script src="/scripts/admin/historyusers.js"></script>
</body>

</html>
